<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--     Sized Diamond Background-->
    <ImageView
        android:id="@+id/imgDiamondBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/diamond_bg"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Login Box Frame (Golden border) -->
    <FrameLayout
        android:id="@+id/loginFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Golden border view -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/golden_border_bg" />

        <!-- Login Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="542dp"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Top icons Row -->


            <!-- Logo -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="172dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:contentDescription="Logo"
                android:src="@drawable/idt_logo" />

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="SYD-MINI LOGIN"
                android:textColor="#222"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Welcome back! "
                android:textColor="#222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Please enter your details "
                android:textColor="#222"
                android:textSize="16sp" />

            <!-- User ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="UserID:"
                android:textColor="#222"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editUserId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/golden_border_bg"
                android:padding="12dp"
                android:textColor="#222"
                android:textSize="16sp"
                android:hint="Enter User ID" />


            <!-- Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Password:"
                android:textColor="#222"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/golden_border_bg"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#222"
                android:textSize="16sp"
                android:hint="Enter Password" />


            <!-- Login Button -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#FFD700"
            android:text="Login"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:padding="0dp"
            android:backgroundTintMode="src_in"
            android:clipToOutline="true"
            android:elevation="4dp"
            android:shape="rectangle" />
        </LinearLayout>

    </FrameLayout>

    <!-- Footer -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDT Gemological Laboratories Worldwide |"
            android:textColor="#222"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.idtworldwide.com"
            android:textColor="#222"
            android:textSize="10sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
