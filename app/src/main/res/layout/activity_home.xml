    <androidx.cardview.widget.CardView
        android:id="@+id/footerBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/footerInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:background="@drawable/card_with_border"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
        </LinearLayout>
            <!-- Left fields -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText android:layout_width="match_parent" android:layout_height="40dp" android:hint="Lot No:"/>
                <EditText android:layout_width="match_parent" android:layout_height="40dp" android:hint="ID:" />
                <EditText android:layout_width="match_parent" android:layout_height="40dp" android:hint="Size:" />
                <EditText android:layout_width="match_parent" android:layout_height="40dp" android:hint="Remarks:" />

                <!-- Autofocus example row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="000" />
                    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Auto Focus"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Right gold buttons block -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="8dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Scan"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/golden_button_bg"
                    android:gravity="center" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Home"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/golden_button_bg"
                    android:gravity="center" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Compare"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/golden_button_bg"
                    android:gravity="center" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Result"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/golden_button_bg"
                    android:gravity="center" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="History"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/golden_button_bg"
                    android:gravity="center" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Certificate"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/golden_button_bg"
                    android:gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Footer Info Bar -->
    <LinearLayout
        android:id="@+id/footerInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/golden_border_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IDT Gemological Laboratories Worldwide"
            android:textStyle="bold"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="www.idtworldwide.com"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
